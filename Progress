Задача с электронными часами в формате 24 часа:
#include <iostream>

int main() {
    int a;
    std::cin>>a;
    std::cout<< (a / 3600) % 24 << ':' << a / 60 % 60 / 10 << a / 60 % 60 % 10 << ':' << a % 60 / 10 << a % 60 % 10;
    return 0;
}

Использование тернарного оператора
#include <iostream>

using namespace std;

int main() {
    int a, b;
    cin >> a >> b;
    cout << (a > b ? a : b);
}
