Задача с электронными часами в формате 24 часа:
#include <iostream>
using namespace std;
int main() {
    int a;
    cin>>a;
    cout<< (a / 3600) % 24 << ':' << a / 60 % 60 / 10 << a / 60 % 60 % 10 << ':' << a % 60 / 10 << a % 60 % 10;
    return 0;
}

//Функция, вызов, возврат результата
#include <iostream>

using namespace std;

int f(int x, int y)
{

    return x+y;

}

int main ()
{
    cout<<f(10,6);
    return 0;
}

//Ссылки и указатели
#include <iostream>

using namespace std;

void f() {
    int a = 5;
    int b = 6;
    
    int res = a + b;
}

int main()
{
    f();
    int *result = &res;
    int a = 5;
    int &ref = a;
    int (*ref2) = &a;
    ++a;
    cout<<a<<" "<<ref<<" "<<ref2<<'\n';
    cout<<result;
    return 0;
}
